pipeline {
    agent any

    environment {
        IMAGE_NAME = 'onlinebookstore'
        IMAGE_TAG  = "${env.BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/hema993/onlinebookstore.git', branch: 'master'
            }
        }

        stage('Build & Package') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${IMAGE_NAME}:${IMAGE_TAG}")
                }
            }
        }

        stage('Run Container') {
            steps {
                sh 'docker rm -f onlinebookstore || true'
                sh "docker run -d -p 8080:8080 --name onlinebookstore ${IMAGE_NAME}:${IMAGE_TAG}"
            }
        }

        stage('Push Image') {
            when {
                expression { env.DOCKERHUB_CREDENTIALS }
            }
            steps {
                script {
                    docker.withRegistry('', env.DOCKERHUB_CREDENTIALS) {
                        docker.image("${IMAGE_NAME}:${IMAGE_TAG}").push()
                        docker.image("${IMAGE_NAME}:${IMAGE_TAG}").push('latest')
                    }
                }
            }
        }
    }
}

